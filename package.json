{
  "name": "cutemagick",
  "version": "0.0.0",
  "description": "A personal web runtime with Git-powered time travel",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "assets:sync": "mkdir -p public/admin/assets && cp -r src/dashboard/assets/* public/admin/assets/",
    "css:build": "tailwindcss -c tailwind.config.js -i src/dashboard/app.css -o public/admin/css/style.css",
    "start": "npm run assets:sync && npm run css:build && node src/index.js",
    "watch": "LOG_LEVEL=debug node --watch src/index.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/pinkhairs/cutemagick"
  },
  "author": "Diana Lopez <me@diana.nu>",
  "license": "MIT",
  "engines": {
    "node": ">=18"
  }
}